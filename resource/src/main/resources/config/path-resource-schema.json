{
  "$schema" : "http://json-schema.org/draft-07/schema#",
  "type" : "object",
  "required" : [ "path", "base", "prefix", "transferMinSize", "directoryListingEnabled" ],
  "properties" : {
    "path" : {
      "type" : "string",
      "description" : "The path of the resource",
      "default" : "/public"
    },
    "base" : {
      "type" : "string",
      "description" : "The base directory of the resource",
      "default" : "/opt/light-4j/public"
    },
    "prefix" : {
      "type" : "boolean",
      "description" : "If true, the path is a prefix",
      "default" : true
    },
    "transferMinSize" : {
      "type" : "integer",
      "description" : "The minimum size of the file to be transferred",
      "default" : 1024,
      "format" : "int32"
    },
    "directoryListingEnabled" : {
      "type" : "boolean",
      "description" : "If true, directory listing is enabled",
      "default" : false
    }
  }
}
